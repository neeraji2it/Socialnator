<div class="col-md-4"></div>
    
    <div class="col-md-4">
      <section class="login-form">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put,:id => "new-form" }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
<%= image_tag("/assets/logo2.png") %>
  <%= render :partial => "/layouts/errors", :locals => {:resource => resource} %>

  <%= f.password_field :password, :placeholder => "Password", autocomplete: "off", :class => "form-control input-lg" %>

    <%= f.password_field :password_confirmation, :placeholder => "Password Confirmation", autocomplete: "off", :class => "form-control input-lg" %>

  <button type="submit" name="go" class="btn btn-lg btn-primary btn-block">Change Password</button>
  <%= link_to "Already have an account? Login", new_user_session_path %>
<% end %>
</section>
</div>
