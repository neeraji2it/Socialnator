<div class="col-md-4"></div>
    
    <div class="col-md-4">
      <section class="login-form">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post ,:id => "new-form" }) do |f| %>
<%= image_tag("/assets/logo2.png") %>
  <%= render :partial => "/layouts/errors", :locals => {:resource => resource} %>

    <%= f.email_field :email, autofocus: true, :placeholder => "E-Mail", :class => "form-control input-lg" %>

    <button type="submit" name="go" class="btn btn-lg btn-primary btn-block">Forgot Password?</button>
  <%= link_to "Already have an account? Login", new_user_session_path %>
<% end %>
</section>
</div>
